<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppText">
        <item name="android:layout_marginStart">@dimen/common_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_text_margin</item>
        <item name="android:layout_marginLeft">@dimen/common_text_margin</item>
        <item name="android:layout_marginRight">@dimen/common_text_margin</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleText" parent="AppText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
